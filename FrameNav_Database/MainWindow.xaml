<Window x:Class="FrameNav_Database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrameNav_Database"
        mc:Ignorable="d"
        Title="Frame Nav Example" Height="600" Width="1000">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="97*"/>
            <ColumnDefinition Width="299*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Frame x:Name="frame" Content="Frame" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" NavigationUIVisibility="Hidden" BorderBrush="Beige" Margin="10" Padding="10" BorderThickness="1"/>
        <Button x:Name="button" Content="Add Product" Grid.Column="1" Grid.Row="0"   HorizontalAlignment="Right" Padding="10" MinWidth="100" Height="50" Margin="10" Click="Button_Click" Style="{StaticResource ButtonLabel}"/>
        <Label Content="My Shop" Grid.ColumnSpan="2" Style="{StaticResource HeaderLabel}"/>
    </Grid>
</Window>
